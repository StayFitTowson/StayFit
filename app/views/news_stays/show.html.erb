<p id="notice"><%= notice %></p>
<div class="row">
	<div class="col-md-6">
  	<img alt="<%= @news_stay.title %>" class="gravatar" src="<%= @news_stay.image %>">
  </div>
  <div class="col-md-6">
	  <h3>Title:</h3>
	  <%= @news_stay.title %>

	  <h3>Description:</h3>
	  <%= @news_stay.description %>
	</div>
</div>
<br>
<% if current_user.admin? || current_user.role == "vendor"%>
	<%= link_to 'Edit News', edit_news_stay_path(@news_stay), class: "btn btn-primary"%>
<%end%>
