  <script src="https://use.fontawesome.com/07b0ce5d10.js"></script>
     <div class="row">
       <div class="col-lg-8">
        <div class="row">
        <% @news_stays.each do |news_stay| %>
          <div class="col-lg-6 col-md-6">
            <aside>
              <img src="<%= news_stay.image%>" class="img-responsive wid">
              <div class="content-title">
                <div class="text-center">
                  <h3><a href="/news_stays/<%= news_stay.id%>"><%= news_stay.title%></a></h3>
                </div>
              </div>
              <% user = User.find(news_stay.user_id)%>
              <div class="content-footer">
                <img class="user-small-img" src="<%= user.image%>">
                <span style="font-size: 16px;color: #fff;"><%= user.name%></span>
                <span class="pull-right">
                <a href="#" data-toggle="tooltip" data-placement="left" title="Comments"><i class="fa fa-comments" ></i> 30</a>
                <a href="#" data-toggle="tooltip" data-placement="right" title="Loved"><i class="fa fa-heart"></i> 20</a>                  
                </span>
                <div class="user-ditels">
                  <div class="user-img"><img src="<%= user.image%>" class="img-responsive"></div>
                  <span class="user-full-ditels">
                  <h3><%= user.name%></h3>
                  <p><%= user.role%></p>
                  </span>
                  <div class="social-icon">
                    <a href="#"><i class="fa fa-facebook" data-toggle="tooltip" data-placement="bottom" title="Facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter" data-toggle="tooltip" data-placement="bottom" title="Twitter"></i></a>
                    <a href="#"><i class="fa fa-google-plus" data-toggle="tooltip" data-placement="bottom" title="Google Plus"></i></a>
                    <a href="#"><i class="fa fa-youtube" data-toggle="tooltip" data-placement="bottom" title="Youtube"></i></a>
                    <a href="#"><i class="fa fa-github" data-toggle="tooltip" data-placement="bottom" title="Github"></i></a>       
                  </div>
                </div>
              </div>
            </aside>
          </div>  
        <%end%>               
       </div>
      </div>
      <div class="col-lg-4">           
       <div class="widget-sidebar">
         <h2 class="title-widget-sidebar">RECENT POST</h2>
           <div class="content-widget-sidebar">
            <ul>
             <%@news.each do |new_stay|%>
              <li class="recent-post">
                <div class="post-img">
                 <img src="<%= new_stay.image%>" class="img-responsive">
                 </div>
                 <a href="/news_stays/<%= new_stay.id%>"><h5><%= new_stay.title%></h5></a>
                 <p><small><i class="fa fa-calendar" data-original-title="" title=""></i> <%= new_stay.created_at.strftime("%d %b %Y")%></small></p>
              </li>
              <hr>
             <%end%>  
            </ul>
           </div>
         </div>         
       </div>
     </div>
  <br>
  <% if current_user.admin? || current_user.role == "vendor"%>
    <%= link_to 'Create News', new_news_stay_path, class: "btn btn-default", style: "background-color: #16A085;"%>
  <%end%>
